<div class="container">
    <div class="main-body m-4">
        <!-- /Breadcrumb -->
        <div class="row gutters-sm">
            <div class="col-md-4 mb-4">
                <div class="card profile">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center p-3">
                            <img src="https://cravatar.eu/avatar/{{globalInfo.username}}/256.png" class="rounded"
                                 width="60%" alt="img">
                            <div class="mt-3">
                                <h4>{{globalInfo.username}}</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3 profile">
                    <ul class="list-group list-group-flush ">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap profile">
                            <span class="mb-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-server" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                    <rect x="3" y="4" width="18" height="8" rx="3"></rect>
                                    <rect x="3" y="12" width="18" height="8" rx="3"></rect>
                                    <line x1="7" y1="8" x2="7" y2="8.01"></line>
                                    <line x1="7" y1="16" x2="7" y2="16.01"></line>
                                </svg>
                            </span>
                            <span>{{globalInfo.server}}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap profile">
                            <span class="mb-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-mail" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                   <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                   <rect x="3" y="5" width="18" height="14" rx="2"></rect>
                                   <polyline points="3 7 12 13 21 7"></polyline>
                                </svg>
                            </span>
                            <span>{{globalInfo.mail}}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap profile">
                            <span class="mb-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-users" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                   <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                   <circle cx="9" cy="7" r="4"></circle>
                                   <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
                                   <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                   <path d="M21 21v-2a4 4 0 0 0 -3 -3.85"></path>
                                </svg>
                            </span>
                            <span>{{globalInfo.staff}}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap profile">
                            <span class="mb-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-world" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                   <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                   <circle cx="12" cy="12" r="9"></circle>
                                   <line x1="3.6" y1="9" x2="20.4" y2="9"></line>
                                   <line x1="3.6" y1="15" x2="20.4" y2="15"></line>
                                   <path d="M11.5 3a17 17 0 0 0 0 18"></path>
                                   <path d="M12.5 3a17 17 0 0 1 0 18"></path>
                                </svg>
                            </span>
                            <span>{{decode serverInfo.address}}</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3 profile row">
                    <div class="card-body">
                        <h6 class="d-flex align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-server" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                <rect x="3" y="4" width="18" height="8" rx="3"></rect>
                                <rect x="3" y="12" width="18" height="8" rx="3"></rect>
                                <line x1="7" y1="8" x2="7" y2="8.01"></line>
                                <line x1="7" y1="16" x2="7" y2="16.01"></line>
                            </svg>{{globalInfo.server}}</h6>
                        <img class="rounded" alt="img" src="https://api.loohpjames.com/serverbanner.png?ip={{decode serverInfo.address}}&width=1224">

                    </div>
                </div>

                <div class="row gutters-sm">
                    <!-- --------------= SERVER SETTINGS =-------------- -->
                    <div class="card h-100 profile">
                        <div class="card-body">
                            <form action="/servers/{{toLowerCase serverInfo.server}}/settings" method="POST" id="create-form" autocomplete="on" class="form">
                                <div class="form-title">{{globalInfo.server}} Settings</div>
                                <div class="input-container ic2">
                                    <input id="owner" name="owner" class="input" type="text" placeholder=" " value="{{serverInfo.owner}}" readonly required/>
                                    <div class="cut"></div>
                                    <label for="owner" class="placeholder">Server Owner</label>
                                </div>
                                <div class="input-container ic2">
                                    <input id="server" name="server" class="input" type="text" placeholder=" " value="{{serverInfo.server}}" required/>
                                    <div class="cut"></div>
                                    <label for="server" class="placeholder">Server Name</label>
                                </div>
                                <div class="input-container ic2">
                                    <input id="address" name="address" class="input" type="text" placeholder=" " value="{{decode serverInfo.address}}" required />
                                    <div class="cut"></div>
                                    <label for="address" class="placeholder">Address</label>
                                </div>
                                <div class="form-title">Database Settings</div>
                                <div class="input-container ic2">
                                    <input id="username" name="username" class="input" type="text" placeholder=" " value="{{decode serverInfo.username}}" required />
                                    <div class="cut"></div>
                                    <label for="username" class="placeholder">Db Username</label>
                                </div>
                                <div class="input-container ic2">
                                    <input id="db" name="db" class="input" type="text" placeholder=" " value="{{decode serverInfo.db}}" required />
                                    <div class="cut"></div>
                                    <label for="db" class="placeholder">Db</label>
                                </div>
                                <div class="input-container ic2">
                                    <input id="host" name="host" class="input" type="text" placeholder=" " value="{{decode serverInfo.host}}" required />
                                    <div class="cut"></div>
                                    <label for="host" class="placeholder">Host</label>
                                </div>
                                <div class="input-container ic2">
                                    <input id="port" name="port" class="input" type="text" placeholder=" " value="{{decode serverInfo.port}}" required />
                                    <div class="cut"></div>
                                    <label for="port" class="placeholder">Port</label>
                                </div>
                                <div class="input-container ic2">
                                    <input id="password" name="password" class="input" type="text" placeholder=" " value="{{decode serverInfo.password}}" required />
                                    <div class="cut"></div>
                                    <label for="password" class="placeholder">Password</label>
                                </div>
                                <div class="form-title">Staff Settings (add a , after each name)</div>
                                <div class="input-container ic2">
                                    <input id="staff" name="staff" class="input" type="text" placeholder=" " value="{{serverInfo.staff}}" required />
                                    <div class="cut"></div>
                                    <label for="staff" class="placeholder">Staff Members</label>
                                </div>

                                <div class="form-title">Stats Settings</div>
                                <div class="input-container ic2">
                                    <input id="maxBans" name="maxBans" class="input" type="text" placeholder=" " value="{{serverSettings.maxBans}}" required />
                                    <div class="cut"></div>
                                    <label for="maxBans" class="placeholder">Max Bans</label>
                                </div>
                                <div class="input-container ic2">
                                    <input id="maxReports" name="maxReports" class="input" type="text" placeholder=" " value="{{serverSettings.maxReports}}" required />
                                    <div class="cut"></div>
                                    <label for="maxReports" class="placeholder">Max Reports</label>
                                </div>
                                <div class="input-container ic2">
                                    <input id="maxWarns" name="maxWarns" class="input" type="text" placeholder=" " value="{{serverSettings.maxWarns}}" required />
                                    <div class="cut"></div>
                                    <label for="maxWarns" class="placeholder">Max Warns</label>
                                </div>
                                <div class="input-container ic2">
                                    <input id="maxPlayers" name="maxPlayers" class="input" type="text" placeholder=" " value="{{serverSettings.maxPlayers}}" required />
                                    <div class="cut"></div>
                                    <label for="maxPlayers" class="placeholder">Max Players</label>
                                </div>

                                <div class="radio">
                                    <label for="ban-ip" class="form-title">Is the server Public?
                                        <input label="Yes" type="radio" id="isPublic_true" name="isPublic" value="true"
                                               alt="{{serverSettings.isPublic}}">
                                        <input label="No" type="radio" id="isPublic_false" name="isPublic" value="false"
                                               alt="{{serverSettings.isPublic}}">
                                    </label>
                                </div>
                                <div class="row buttons-container">
                                    <button class="submit button" id="button-6">
                                        <div id="spin"></div>
                                        Confirm Settings
                                    </button>
                                    <button class="submit button" id="button-6">
                                        <div id="spin"></div>
                                        Cancel
                                    </button>
                                </div>
                                <div class="divider">

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>