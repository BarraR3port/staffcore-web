<div class="create-form form-check-inline p-4" style="font-size: large">
    <div class="text-center p-4" style="font-size: x-large">Edit the Warn {{warns.WarnId}}</div>
    <div class="card-body">
        <form action="{{warns.WarnId}}" method="POST" id="create-form" autocomplete="on">
            <label for="warned" class="mb-2">The Warned Name</label>
            <div class="input-icons" id="warned-input">
                <i><img src="https://cravatar.eu/avatar/{{warns.Name}}/32.png" id="warned-image" class="icon"></i>
                <input type="text" id="Name" name="Name" value="{{warns.Name}}" placeholder="Type the Player Name"
                       class="input-field" style="text-decoration-width: auto" readonly required>
            </div>

            <label for="user" class="mb-2">The Warner Nick Name</label>
            <div class="input-icons" id="user-input">
                <i><img src="https://cravatar.eu/avatar/{{warns.Warner}}/32.png" id="player-image" class="icon"></i>
                <input type="text" id="Warner" name="Warner" value="{{warns.Warner}}"
                       placeholder="Type your Nick Name" class="input-field" style="text-decoration-width: auto"
                       required>
            </div>

            <div class="input-icons" id="user-input">
                <label for="reason">Reason</label>
                <input type="text" id="Reason" name="Reason" value="{{warns.Reason}}" class="input-field"
                       style="text-decoration-width: auto" placeholder="Type the Reason" required>
            </div>

            <div style=" text-align: center;">
                <button type="submit" class="btn btn-primary btn-save" tabindex="5">Confirm Edit</button>
                <a href="/servers/{{bans.server}}/warns" class="btn btn-primary btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>


<script>
    function changeImg(image, input) {
        const player_image = document.getElementById(image);
        const player_input = document.getElementById(input).value;

        if (player_input !== undefined) {
            player_image.src = `https://cravatar.eu/avatar/${player_input}/32.png`;
        }
        if (player_input === "") {
            player_input.src = "";
        }

    }

    const form = document.getElementById("warned-input");
    form.addEventListener("input", () => {
        changeImg("warned-image", "Name");
    });
    const form2 = document.getElementById("user-input");
    form2.addEventListener("input", () => {
        changeImg("player-image", "Warner");
    });
</script>


