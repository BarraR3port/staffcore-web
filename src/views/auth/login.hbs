<div class="auth-form">
    <div class="container" style="width: 700px;">
        <div class="row">
            <div class="mx-auto">
                <div class="row gutters-sm">
                    <div class="col" style="align-content: center">
                        <div class="row gutters-sm">
                            <!-- --------------= SERVER SETTINGS =-------------- -->
                            <div class="card h-100 profile" >
                                <div class="card-body">
                                    <form action="/login" method="POST" id="create-form" autocomplete="on" class="form">
                                        <div class="form-title">StaffCore Log In</div>
                                        <div class="input-container ic2">
                                            <input id="username" name="username" class="input" type="text" placeholder=" " required autocomplete="on" />
                                            <div class="cut"></div>
                                            <label for="username" class="placeholder">User Name</label>
                                        </div>
                                        <div class="input-container ic2">
                                            <input id="password" name="password" class="input" type="password" placeholder=" " required autocomplete="on" />
                                            <div class="cut"></div>
                                            <label for="password" class="placeholder">Password</label>
                                        </div>
                                        <div class="row buttons-container">
                                            <div id="spin"></div>
                                            <button class="submit button" id="button-6">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-login" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2"></path>
                                                    <path d="M20 12h-13l3 -3m0 6l-3 -3"></path>
                                                </svg>
                                            </button>
                                            <div id="spin"></div>
                                            <a class="submit button" id="button-6" href="/register">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-clipboard-list" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2"></path>
                                                    <rect x="9" y="3" width="6" height="4" rx="2"></rect>
                                                    <line x1="9" y1="12" x2="9.01" y2="12"></line>
                                                    <line x1="13" y1="12" x2="15" y2="12"></line>
                                                    <line x1="9" y1="16" x2="9.01" y2="16"></line>
                                                    <line x1="13" y1="16" x2="15" y2="16"></line>
                                                </svg>
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
