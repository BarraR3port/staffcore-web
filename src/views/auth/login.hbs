<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center auth-form">
                <div class="card-header">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <img src="/img/logo.svg" alt="Logo StaffCore" class="card-img-top mx-auto m-2 w-50">
                    <form action="/login" method="POST" class="" aria-autocomplete="both">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Username" autofocus class="form-control"
                                   required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control"
                                   pattern=".{4,}" required>
                        </div>
                        <div style=" text-align: center;">
                            <button type="submit" class="btn btn-primary btn-save" tabindex="5">Login</button>
                            <a href="/register" class="btn btn-primary btn-register">Register</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>